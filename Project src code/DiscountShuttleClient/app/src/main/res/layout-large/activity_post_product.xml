<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.joe.UI.Post_product"
    android:background="#f5d8f9f1">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/product_"
                android:id="@+id/textview1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:textColor="#ff202824"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"

                android:text="@string/regular_pr"
                android:id="@+id/textview2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:textColor="#ff202824"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:inputType="text"
                android:ems="7"
                android:id="@+id/etProductName"

                android:textSize="18sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ems="8"
                android:id="@+id/etRegularPrice"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Introduction:"
                android:id="@+id/textView9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:textColor="#ff202824"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Price Now:"
                android:id="@+id/textView"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:textColor="#ff202824"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:inputType="text"
                android:ems="8"
                android:id="@+id/etProIntro"
                />


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ems="8"
                android:id="@+id/etPriceNow"

                android:inputType="numberDecimal" />


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image:"
            android:id="@+id/textView12"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:textColor="#ff202824"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:id="@+id/ivProImage"
                android:src="@drawable/image"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_gravity="bottom"
                android:text="Upload "
                android:id="@+id/btUpload"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Submit"
                android:id="@+id/btPostSub"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Cancle"
                android:id="@+id/btSellePostCancel"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

