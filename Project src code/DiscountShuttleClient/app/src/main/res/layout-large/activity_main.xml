<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textFieldhelder">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/logUserName"
                android:hint="Username/Email address"
                android:textSize="30dp"
                android:background="#60d0f1ff"
                android:paddingLeft="16dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"></LinearLayout>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/logPassword"
                android:hint="Password"
                android:textSize="30dp"
                android:background="#60d0f1ff"
                android:paddingLeft="16dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="type:"
                    android:id="@+id/textView17"
                    android:gravity="center_vertical"
                    android:textSize="25dp"
                    android:textColor="#ff142020"
                    android:background="#60d0f1ff"
                    android:paddingLeft="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#60d0f1ff"></LinearLayout>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/logUsertype"
                    android:spinnerMode="dropdown"
                    android:clickable="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="0.06"
                    android:background="#60d0f1ff" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingLeft="15dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/loginHelder"
            android:gravity="center_vertical|center_horizontal"
            android:background="#00000000">

            <Button
                android:layout_width="228dp"
                android:layout_height="70dp"
                android:text="Log in"
                android:id="@+id/btMainLogin"
                android:textSize="25dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linkHelder">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Guest login"
                android:id="@+id/guestLogin"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="#ff142020"
                android:nestedScrollingEnabled="false"
                android:clickable="true"
                android:textSize="30dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:id="@+id/signUp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#ff142020"
                android:nestedScrollingEnabled="false"
                android:clickable="true"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"></LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
