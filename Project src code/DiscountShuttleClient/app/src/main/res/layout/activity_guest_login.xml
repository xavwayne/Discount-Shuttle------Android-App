<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jiyushi1.dis.activity.customer.CustomerMainPage"
    android:background="#ff39b1ff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/producttypeHolder">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Products Type:"
                android:id="@+id/textView2"
                android:layout_gravity="center"
                android:textSize="15dp" />

            <Spinner
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:id="@+id/itemType"
                android:layout_gravity="center"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:id="@+id/textView11"
                android:textSize="15dp"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Findlocation"
                android:id="@+id/btGuestFindLocation"
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <fragment  android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/mapView"
                android:name="com.google.android.gms.maps.MapFragment" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="search"
                android:id="@+id/btGuestSearch"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---------------------------------------------------------------------------------------"
                android:id="@+id/textView12" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text="LOGOUT"
                android:id="@+id/btGuestLogout"
                android:layout_weight="1"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
